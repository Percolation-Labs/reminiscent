# Siggy AWS Configuration
AWS_ACCOUNT_ID=227209289001
AWS_REGION=us-east-1
AWS_PROFILE=siggy

# Cluster Configuration
CLUSTER_NAME_PREFIX=siggy
# APP_NAMESPACE defaults to CLUSTER_NAME_PREFIX if not set
ENVIRONMENT=staging
KUBERNETES_VERSION=1.34

# Deployment Mode (minimal = management + 1 worker cluster)
DEPLOYMENT_MODE=minimal

# VPC Configuration - Create new VPC
EXISTING_VPC_ID=

# GitHub Configuration (optional - set later for CI/CD)
GITHUB_ORG=
GITHUB_REPO=
GITHUB_OIDC_URL=
GITHUB_OIDC_THUMBPRINT=

# S3 Bucket - Auto-generate based on cluster name
APP_BUCKET_NAME=

# ECR Repository Names
ECR_API_REPO=siggy/api
ECR_MANIFESTS_REPO=siggy/manifests

# Admin Role ARN (for kubectl access)
# Leave empty to skip admin access entry, or set to your IAM user/role ARN
ADMIN_ROLE_ARN=arn:aws:iam::227209289001:user/sirsh

# Feature Flags
ENABLE_KARPENTER=true
ENABLE_ALB_CONTROLLER=true
ENABLE_EXTERNAL_SECRETS=true
ENABLE_CERT_MANAGER=true
ENABLE_ADOT=true
ENABLE_POD_IDENTITY=true
ENABLE_ARGOCD=true
ENABLE_SSM_PARAMETERS=true

# SSM Configuration
SSM_PREFIX=/rem

# API Keys (required if ENABLE_SSM_PARAMETERS=true)
# These are stored in SSM Parameter Store for External Secrets Operator
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_CLIENT_ID=placeholder
GOOGLE_CLIENT_SECRET=placeholder

# Helm Chart Versions
ARGOCD_VERSION=7.7.5

# Cost Optimization
USE_SPOT_INSTANCES=true
MGMT_INSTANCE_TYPE=t3.small
MGMT_MIN_SIZE=2
MGMT_MAX_SIZE=3
WORKER_INSTANCE_TYPE=t3.medium
WORKER_MIN_SIZE=2
WORKER_MAX_SIZE=3
