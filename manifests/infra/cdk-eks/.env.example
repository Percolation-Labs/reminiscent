# REM Stack - AWS CDK Configuration
# Copy to .env and fill in your values

# =============================================================================
# AWS Configuration (Required)
# =============================================================================
AWS_ACCOUNT_ID=852140462228
AWS_REGION=us-east-1
AWS_PROFILE=rem

# =============================================================================
# Cluster Configuration
# =============================================================================
CLUSTER_NAME_PREFIX=rem
ENVIRONMENT=staging
KUBERNETES_VERSION=1.34

# Application namespace (defaults to CLUSTER_NAME_PREFIX if not set)
# APP_NAMESPACE=rem

# =============================================================================
# API Keys (Required for SSM Parameters)
# These are stored in AWS SSM Parameter Store for External Secrets Operator
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-proj-...

# OAuth (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_KARPENTER=true
ENABLE_ALB_CONTROLLER=true
ENABLE_EXTERNAL_SECRETS=true
ENABLE_CERT_MANAGER=true
ENABLE_ADOT=true
ENABLE_POD_IDENTITY=true
ENABLE_ARGOCD=true
ENABLE_SSM_PARAMETERS=true

# =============================================================================
# Cost Optimization
# =============================================================================
USE_SPOT_INSTANCES=true
MGMT_INSTANCE_TYPE=t3.small
WORKER_INSTANCE_TYPE=t3.medium

# =============================================================================
# Advanced Configuration (usually don't need to change)
# =============================================================================

# Deployment mode
DEPLOYMENT_MODE=minimal

# SSM prefix for parameters
SSM_PREFIX=/rem

# Admin access (your IAM user/role for kubectl access)
# Leave empty to use cluster creator's identity
# ADMIN_ROLE_ARN=arn:aws:iam::852140462228:user/your-user

# VPC (leave empty to create new)
# EXISTING_VPC_ID=

# S3 bucket (leave empty to auto-generate)
# APP_BUCKET_NAME=

# ECR repos (for CI/CD pipelines)
# ECR_API_REPO=rem/api

# Helm versions
ARGOCD_VERSION=9.1.3
